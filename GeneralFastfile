fastlane_version "2.59.0"


default_platform :ios



lane :todo do |options|
  UI.header "SUPR def #{ENV["APPSTROE_SCHEME"]}"
end


def assd
  UI.header "SUPR def #{ENV["APPSTROE_SCHEME"]}"
end


lane :todoR do |options|
  UI.header "SUPR def #{ENV["APPSTROE_SCHEME"]}, #{options[:run]}, #{ENV["MAIN_TARGET"]}"
end




desc "Run unit tests"
lane :test do
	git_reset_changes
	clear_derived_data
	update_pods
  scan
	slather
end





def git_reset_changes
  sh "git reset --hard HEAD"
end

def update_pods
  cocoapods(
    clean: true,
    try_repo_update_on_error: true
  )
end
